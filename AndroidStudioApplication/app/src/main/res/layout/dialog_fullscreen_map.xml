<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fullscreen_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Your buttons go here -->
    <ImageView
        android:id="@+id/fullscreen_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/restaurant_map"
        android:contentDescription="@string/layout_map_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:background="@drawable/button_green"
        android:paddingVertical="20dp"
        android:text="@string/continue_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="320dp" />

    <Button
        android:id="@+id/btn_zoom_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/zoom_in"
        android:padding="10dp"
        android:background="@drawable/button_orange"
        app:layout_constraintStart_toStartOf="@+id/fullscreen_image"
        app:layout_constraintTop_toTopOf="@+id/fullscreen_image" />

    <Button
        android:id="@+id/btn_zoom_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/zoom_out"
        android:padding="10dp"
        android:background="@drawable/button_orange"
        app:layout_constraintEnd_toEndOf="@+id/fullscreen_image"
        app:layout_constraintTop_toTopOf="@+id/fullscreen_image" />


</androidx.constraintlayout.widget.ConstraintLayout>