<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Coursework2000" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->


        <!--General Text Changes-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>

    </style>

    <!--Review Stars-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>


    <!--Fullscreen Map-->
    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.Coursework2000" parent="Base.Theme.Coursework2000" />
</resources>